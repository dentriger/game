{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>UID</th>
                    <th>Фото</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Email</th>
                    <th>Активен</th>
                    <th>IP при регистрации</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.uid }}</td>
                        <td><img class="rounded-circle" src="{{ asset(app.user.photo) }}"></td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.isActive ? "Да" : "Нет" }}</td>
                        <td>{{ user.registrationIp }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}